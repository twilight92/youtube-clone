extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        label(for="video") Video File
        input(type="file", accept="video/*", id="video" name="video")
        input(placeholder="Title", required, type="text", name="title", maxlength=20)
        input(placeholder="Description", required, type="text", name="description", minlength=20)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")
